<% @answers.each do |answer| %>
  <%= form_for(answer, url: question_answer_path(@question, answer)) do |answer_form| %>
    <div class="row">
      <div class="large-12 columns">
        <div class="row collapse">
          <div class="small-8 columns">
            <%= answer_form.text_field :content %>
          </div>
          <div class="small-2 columns">
            <%= answer_form.submit "Save Changes", class: "button postfix" %>
          </div>
          <div class="small-2 columns">
            <%= link_to "Delete", question_answer_path(@question, answer), 
                              method: :delete, class: "button postfix alert" %>
          </div>
        </div>
      </div>
      </div>
  <% end %>
<% end %>