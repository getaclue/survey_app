<%= form_for(@makenewquestion, url: survey_questions_path(current_survey) ) do |form| %>
  <div class="row">
    <div class="large-12 columns">
      <div class="row collapse">
        <div class="small-10 columns">
          <%= form.text_field :content, placeholder: "Enter a new question" %>
        </div>
        <div class="small-2 columns">
          <%= form.submit "Add Question", class: "button postfix alert" %>
        </div>
      </div>
    </div>
  </div>
<% end %>