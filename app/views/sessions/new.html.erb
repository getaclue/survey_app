  <%= form_for(:session, url: login_path) do |form| %>
  <fieldset>
    <legend>Login</legend>
    <div class="row">
      <div class="large-12 columns">
        <%= form.text_field :email, :placeholder => "Email" %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= form.password_field :password, :placeholder => "Password" %>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <%= form.submit "Login Now", class: "button expand radius small" %>
      </div>
    </div>
      <p>New user? <%= link_to "Sign Up", signup_path %></p>
  </fieldset>
  <% end %>
